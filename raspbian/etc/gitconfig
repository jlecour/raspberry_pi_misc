[core]
  repositoryformatversion = 0
  filemode = true
  bare = false
  logallrefupdates = true
  ignorecase = true
  editor = vim
  autocrlf = input
[color]
  branch = auto
  status = auto
  diff = auto
  interactive = auto
  decorate = auto
  grep = auto
  ui = true
[push]
  default = upstream
[pull]
  rebase = true
[apply]
  whitespace = nowarn
[rebase]
  autosquash = true
[alias]
  a = add
  aa = add -A .
  b = branch
  ba = branch -a
  c = commit -v
  ca = commit -v -a
  co = checkout
  d = diff --ignore-space-change --patience --no-prefix
  dw = diff --word-diff
  l = pull
  f = fetch
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  rf = !sh -c 'rm $1 && git checkout $1'
  s = status -s -b
